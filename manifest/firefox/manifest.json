{
    "manifest_version": 2,
    "name": "wallabagger",
    "version": "1.4.4.2",
    "default_locale": "en",
    "author": "Yuriy Evdokimov, Simon Alberny",
    "description": "__MSG_Extension_description__",
    "icons": {
        "16": "img/wallabagger-16.png",
        "48":  "img/wallabagger-48.png",
        "96": "img/wallabagger-96.png",
        "128": "img/wallabagger-128.png"
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "19": "img/wallabagger-19.png",
            "38": "img/wallabagger-19.png"
        },
        "default_title": "Wallabagger",
        "default_popup": "popup.html"
    },

   "options_ui": {
       "page": "options.html"
    },

    "background": {
        "scripts": [ 
            "js/common.js", 
            "js/fetch-api.js", 
            "js/wallabag-api.js", 
            "js/background.js" , 
            "js/command.js", 
            "js/menus.js"
        ]
    },
    "permissions": [
        "*://*/",
        "tabs",
        "storage",
        "contextMenus"
    ],
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
              "default": "Alt+W",
              "windows": "Alt+W",
              "mac": "Alt+W"
            }
        },
        "wallabag-it": {
            "suggested_key": {
              "default": "Alt+Shift+W",
              "windows": "Alt+Shift+W",
              "mac": "Alt+Shift+W"
            },
            "description": "__MSG_Wallabag_it_description__"
        }
    }

}
