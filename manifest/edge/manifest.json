{
    "manifest_version": 2,
    "name": "wallabagger",
    "default_locale": "en",
    "version": "1.4.4.2",
    "author": "Yuriy Evdokimov, Simon Alberny",
    "description": "__MSG_Extension_description__",
    "icons": {
        "16": "img/wallabagger-16ou.png",
        "48": "img/wallabagger-48ou.png"
    },

    "browser_action": {
        "default_icon": {
        "20":  "img/wallabagger-20ou.png",
        "40":  "img/wallabagger-40ou.png"
        },
        "default_title": "This is popup title",
        "default_popup": "popup.html"
    },

   "options_page": "options.html",

    "background": {
        "persistent": true,
        "scripts": [ 
            "js/fetch-api.js", 
            "js/common.js", 
            "js/wallabag-api.js", 
            "js/background.js", 
            "js/menus.edge.js" 
        ]
    },
    "permissions": [
        "*://*/",
        "tabs",
        "storage",
        "contextMenus"
    ]
}
